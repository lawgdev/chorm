{
  "name": "@lawgdev/chorm",
  "description": "The sane Clickhouse ORM for TypeScript",
  "version": "1.1.0",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "bin": {
    "chorm": "./dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lawgdev/chorm.git"
  },
  "author": "Cody Miller <hello@looskie.com> (https://looskie.com), Bereket Semagn <semagnbereket@gmail.com> (https://bereket.wtf)",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts src/cli/index.ts --dts --format esm,cjs",
    "workbench": "tsx _workbench/index.ts",
    "lint": "prettier --write src",
    "prettier-write": "prettier --write src",
    "test": "jest --forceExit",
    "release": "yarn changeset publish --access public"
  },
  "dependencies": {
    "@clickhouse/client": "^0.2.5",
    "cli-color": "^2.0.3",
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "sqlstring": "^2.3.3",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/cli-color": "^2.0.4",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.9",
    "@types/sqlstring": "^2.3.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "bugs": {
    "url": "https://github.com/lawgdev/chorm/issues"
  },
  "homepage": "https://github.com/lawgdev/chorm#readme",
  "files": [
    "dist",
    "package.json"
  ],
  "keywords": [
    "clickhouse",
    "orm",
    "typescript"
  ]
}
